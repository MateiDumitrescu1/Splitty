<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="/client/scenes/AdminOverview.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.AdminOverviewCtrl">
   <children>
      <Button fx:id="languageButton" layoutX="23.0" layoutY="360.0" mnemonicParsing="false" onAction="#languageSwitch" text="EN" />
      <Button fx:id="backButton" layoutX="23.0" layoutY="21.0" mnemonicParsing="false" onAction="#exitAdminOverview" text="EXIT" />

      <Button fx:id="serverInfoButton" layoutX="97.0" layoutY="360.0" mnemonicParsing="false" onAction="#showServerInfo" prefHeight="25.0" prefWidth="173.0" text="Show server information" />
      <TableView fx:id="tableView" layoutX="221.0" layoutY="21.0" prefHeight="245.0" prefWidth="339.0">
         <columns>
            <TableColumn fx:id="id" text="Event ID">
               <cellValueFactory>
                  <PropertyValueFactory property="id" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="title" text="Title">
               <cellValueFactory>
                  <PropertyValueFactory property="title" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="participants" text="Participants">
               <cellValueFactory>
                  <PropertyValueFactory property="participants" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="expenses" text="Expenses">
               <cellValueFactory>
                  <PropertyValueFactory property="expenses" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="creationDate" text="Creation date">
               <cellValueFactory>
                  <PropertyValueFactory property="creationDate" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="lastActivity" text="Last activity">
               <cellValueFactory>
                  <PropertyValueFactory property="lastActivity" />
               </cellValueFactory>
            </TableColumn>
         </columns>
      </TableView>
      <ChoiceBox fx:id="sortChoiceBox" layoutX="225.0" layoutY="280.0" prefWidth="150.0"/>
      <Button fx:id="sortButton" layoutX="386.0" layoutY="280.0" mnemonicParsing="false" onAction="#applySort" text="%applySort" />
      <Button fx:id="importButtonText" layoutX="18.0" layoutY="155.0" mnemonicParsing="false" onAction="#importFromText" prefHeight="25.0" prefWidth="188.0" text="%importEventFromText" />
      <Button fx:id="importButtonFile" layoutX="18.0" layoutY="119.0" mnemonicParsing="false" onAction="#importFromFile" prefHeight="25.0" prefWidth="188.0" text="%importEventFromFile" />
      <Button fx:id="downloadButton" layoutX="18.0" layoutY="188.0" mnemonicParsing="false" onAction="#downloadAllEvents" prefHeight="25.0" prefWidth="188.0" text="%downloadEventData" />
      <Button fx:id="helpButton" layoutX="492.0" layoutY="360.0" mnemonicParsing="false" onAction="#showHelp" prefHeight="25.0" prefWidth="68.0" text="Help" />
      <Button fx:id="settingsButton" layoutX="371.0" layoutY="360.0" mnemonicParsing="false" onAction="#showSettings" prefHeight="25.0" prefWidth="88.0" text="Settings" />
   </children>
</AnchorPane>
